<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    tools:context="com.example.ranialjondi.certificatepinningtest.MainActivity">

    <Button
        android:id = "@+id/button_good_keyset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/keyset_that_validates_certificate"/>

    <Button
        android:id = "@+id/button_bad_keyset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/keyset_that_rejects_certificate"/>



</LinearLayout>
